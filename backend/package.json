{
  "name": "foodin-backend",
  "version": "1.0.0",
  "description": "Foodin B2B E-commerce Platform Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:setup": "node scripts/setup.js",
    "setup": "npm install && npm run db:setup",
    "migrate:up": "node-pg-migrate up -c migrate-config.js",
    "migrate:down": "node-pg-migrate down -c migrate-config.js",
    "migrate:create": "node-pg-migrate create -c migrate-config.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "b2b",
    "ecommerce",
    "api"
  ],
  "author": "Foodin Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kavenegar": "^1.1.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "path-to-regexp": "^6.2.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  }
}
